<div class="form-main">
  <div class="error-explanation">
  <% if @tweet.errors.any? %>
    <p><%= @tweet.errors.count %> 件のエラーがあります</p>
    <ul class="error-msg">
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  </div>
  <%= form_with(model: @tweet, local: true, url: choose_new_or_edit) do |form| %>
    <%= form.label :tweet %>
    <%= form.text_field :content %>

    <%= form.submit %>
  <% end %>
</div>
